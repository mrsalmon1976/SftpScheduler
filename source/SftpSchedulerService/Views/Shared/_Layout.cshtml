            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @{
                    RenderMenuItem("menu-dashboard", "Dashboard", "/dashboard", "fa-tachometer-alt", new string[] { UserRoles.User, UserRoles.Admin });
                    RenderMenuItem("menu-hosts", "Hosts", "/hosts", "fa-server", new string[] { UserRoles.Admin });
                    RenderMenuItem("menu-jobs", "Jobs", "/jobs", "fa-exchange-alt", new string[] { UserRoles.Admin });
                    RenderMenuItem("menu-users", "Users", "/users", "fa-users", new string[] { UserRoles.Admin });
                    RenderMenuItem("menu-settings", "Settings", "/settings", "fa-gear", new string[] { UserRoles.Admin });
                }
            </ul>
